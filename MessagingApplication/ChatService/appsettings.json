{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "PostgresSQL": {
    "ConnectionString": "Host=chat-db;Port=5432;Database=chats;Username=admin;Password=admin;Include Error Detail=true"
  },
  "RabbitMQ": {
    "ConnectionString": "amqp://admin:admin@rabbitmq:5672/"
  },
  "Exchanges": {
    "Chats": {
      "Name": "chats",
      "Events": {
        "Created": {
          "Name": "ChatCreated",
          "Route": "chats.created"
        },
        "Updated": {
          "Name": "ChatUpdated",
          "Route": "chats.updated"
        },
        "UserJoinedChat": {
          "Name": "UserJoinedChat",
          "Route": "chats.users.joined"
        },
        "ChatUserPrivilegeUpdated": {
          "Name": "ChatUserPrivilegeUpdated",
          "Route": "chats.users.updated"
        },
        "UserLeftChat": {
          "Name": "UserLeftChat",
          "Route": "chats.users.left"
        }
      }
    }
  },
  "Queues": {
    "Users": {
      "Name": "chat-service-user-events",
      "Exchange": "users",
      "RoutingKey": "users.#",
      "Events": {
        "Created": "UserCreated",
        "Deleted": "UserDeleted"
      }
    }
  }
}
